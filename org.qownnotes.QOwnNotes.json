{
    "app-id": "org.qownnotes.QOwnNotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "QOwnNotes",
    "rename-desktop-file": "PBE.QOwnNotes.desktop",
    "rename-icon": "QOwnNotes",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--device=dri",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.*"
    ],
    "modules": [
        {
            "name": "QOwnNotes",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.tuxfamily.org/qownnotes/src/qownnotes-23.4.0.tar.xz",
                    "sha256": "f204b2ed62f4c292c05f1568de8380f57d76a9dfd1ecfdcc8269705f1a49494b",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://download.tuxfamily.org/qownnotes/src/",
                        "pattern": "(qownnotes-([\\d\\.]+).tar.xz)",
                        "is-main-source": true
                    }
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 org.qownnotes.QOwnNotes.appdata.xml /app/share/appdata/org.qownnotes.QOwnNotes.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.qownnotes.QOwnNotes.appdata.xml"
                }
            ]
        },
        {
            "name": "git",
            "make-args": [
                "INSTALL_SYMLINKS=1"
            ],
            "make-install-args": [
                "INSTALL_SYMLINKS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.33.1.tar.xz",
                    "sha256": "e054a6e6c2b088bd1bff5f61ed9ba5aa91c9a3cd509539a4b41c5ddf02201f2f"
                }
            ]
        }
    ]
}
